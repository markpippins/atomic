# Atomic Project Environment Variables Configuration

# Broker Service Proxy
PORT=3333                              # Port for the proxy server to listen on (default: 3333)
HOST=0.0.0.0                          # Host for the proxy server to bind to (default: 0.0.0.0)
BROKER_GATEWAY_URL=http://localhost:8080 # URL of the broker gateway to forward requests to

# Image Server
IMAGE_SERVER_PORT=8081                # Port for image server (default: 8081)
IMAGE_ROOT_DIR=./images               # Root directory for images (default: ./images)

# Google Search Service
SEARCH_SERVER_PORT=8082               # Port for Google search service (default: 8082)
GOOGLE_API_KEY=                       # Google API key for search service
SEARCH_ENGINE_ID=                     # Google Custom Search Engine ID

# File System Server
FS_SERVER_PORT=4040                   # Port for file system server (default: 4040)
FS_ROOT_DIR=./                        # Root directory for file system server (default: current directory)

# Unsplash Service
UNSPLASH_SERVER_PORT=8083             # Port for Unsplash service (default: 8083)
UNSPLASH_ACCESS_KEY=                  # Unsplash access key

# Web Applications (Next.js)
NEXT_PUBLIC_BROKER_GATEWAY_URL=http://localhost:8080 # Broker gateway URL for web apps
NEXT_PUBLIC_DEBUG_MODE=false          # Enable debug mode for web apps (true/false)
NEXT_PUBLIC_API_URL=http://localhost:4040/fs # API URL for web apps
NEXT_PUBLIC_DEBUG_USER_ALIAS=debug_user # Debug user alias
NEXT_PUBLIC_DEBUG_USER_EMAIL=debug@example.com # Debug user email
GEMINI_API_KEY=                       # Gemini API key for AI features

# Database configurations
MYSQL_ROOT_PASSWORD=rootpass          # MySQL root password
MYSQL_DATABASE=userdb                 # MySQL database name
SPRING_DATASOURCE_URL=jdbc:mysql://localhost:3306/user_service?createDatabaseIfNotExist=true # MySQL connection URL
SPRING_DATASOURCE_USERNAME=root       # MySQL username
SPRING_DATASOURCE_PASSWORD=rootpass   # MySQL password
SPRING_DATA_MONGODB_URI=mongodb://localhost:27017/broker-gateway # MongoDB connection string